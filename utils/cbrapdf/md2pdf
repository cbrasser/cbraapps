#!/usr/bin/env bash

# md2pdf - Convert markdown to PDF with Glow styling
# Usage: md2pdf input.md [output.pdf] [theme]

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored messages
error() { echo -e "${RED}Error: $1${NC}" >&2; }
success() { echo -e "${GREEN}$1${NC}"; }
info() { echo -e "${YELLOW}$1${NC}"; }

# Check if required tools are installed
check_dependencies() {
    local missing=()

    if ! command -v pandoc &> /dev/null; then
        missing+=("pandoc")
    fi

    if ! command -v weasyprint &> /dev/null; then
        missing+=("weasyprint")
    fi

    if [ ${#missing[@]} -gt 0 ]; then
        error "Missing required tools: ${missing[*]}"
        echo ""
        echo "Installation instructions:"
        echo "  pandoc:     sudo apt install pandoc  # or brew install pandoc"
        echo "  weasyprint: pip install weasyprint"
        exit 1
    fi
}

# Show usage
usage() {
    cat << EOF
Usage: md2pdf <input.md> [output.pdf] [theme]

Arguments:
  input.md    Input markdown file (required)
  output.pdf  Output PDF file (default: input.pdf)
  theme       Theme to use: 'light' or 'dark' (default: dark)

Examples:
  md2pdf README.md
  md2pdf README.md output.pdf
  md2pdf README.md output.pdf light
  md2pdf README.md - dark  # Use '-' to auto-generate output name

EOF
    exit 1
}

# Parse arguments
if [ $# -eq 0 ] || [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
    usage
fi

INPUT_FILE="$1"
OUTPUT_FILE="${2:-}"
THEME="${3:-dark}"

# Validate input file
if [ ! -f "$INPUT_FILE" ]; then
    error "Input file not found: $INPUT_FILE"
    exit 1
fi

# Determine output file
if [ -z "$OUTPUT_FILE" ] || [ "$OUTPUT_FILE" == "-" ]; then
    OUTPUT_FILE="${INPUT_FILE%.md}.pdf"
fi

# Validate theme
if [ "$THEME" != "light" ] && [ "$THEME" != "dark" ]; then
    error "Invalid theme: $THEME (must be 'light' or 'dark')"
    exit 1
fi

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CSS_FILE="$SCRIPT_DIR/styles_${THEME}.css"

# Check if CSS file exists
if [ ! -f "$CSS_FILE" ]; then
    error "CSS file not found: $CSS_FILE"
    exit 1
fi

# Check dependencies
check_dependencies

# Convert markdown to PDF
info "Converting $INPUT_FILE to PDF..."
info "Theme: $THEME"
info "Output: $OUTPUT_FILE"

if pandoc "$INPUT_FILE" \
    -o "$OUTPUT_FILE" \
    --pdf-engine=weasyprint \
    --css="$CSS_FILE" \
    --metadata title=" " \
    2>&1; then
    success "âœ“ PDF generated successfully: $OUTPUT_FILE"
else
    error "Failed to generate PDF"
    exit 1
fi
